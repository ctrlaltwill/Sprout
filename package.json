{
  "name": "sprout-flashcards",
  "version": "0.0.5",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev:js": "node esbuild.config.js --watch",
    "dev:css:tw": "npx @tailwindcss/cli -i ./src/styles.tailwind.css -o ./dist/styles.tmp.css --watch",
    "dev:css:scope": "npx postcss ./dist/styles.tmp.css -o ./dist/styles.css --watch",
    "dev:css": "concurrently -k \"npm:dev:css:tw\" \"npm:dev:css:scope\"",
    "dev": "concurrently -k \"npm:dev:js\" \"npm:dev:css\"",
    "build:js": "node esbuild.config.js --prod",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.tailwind.css -o ./dist/styles.tmp.css --minify && npx postcss ./dist/styles.tmp.css -o ./dist/styles.css && rm -f ./dist/styles.tmp.css",
    "build": "npm run build:js && npm run build:css && cp manifest.json dist/manifest.json"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^20.11.30",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.20.2",
    "obsidian": "^1.5.8",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-important": "^0.3.0",
    "postcss-prefix-selector": "^2.1.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "basecoat-css": "^0.3.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "interactjs": "^1.10.27",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^2.12.4",
    "tailwind-merge": "^3.4.0",
    "ts-fsrs": "^5.2.3"
  }
}
